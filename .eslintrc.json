{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": "airbnb-base",
	"parser": "babel-eslint",
	"rules": {
		// indentation
		"indent": [ 2, 4 ],

		// spacing
		"template-curly-spacing": "off",
		"computed-property-spacing": 0,
		"no-multiple-empty-lines": [ 2, { "max": 1, "maxEOF": 0, "maxBOF": 0 } ],

		// strings
		"quotes": [ 2, "single", "avoid-escape" ],

		// keep it simple
		"complexity": [ 1, 6 ],

        "max-len": ["error", 160],

        "arrow-body-style": ["error", "as-needed", { "requireReturnForObjectLiteral": true }],

        "comma-dangle": 0
	}
}
